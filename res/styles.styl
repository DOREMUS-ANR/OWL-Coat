@import 'https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&lang=en'
@import "button"
@import "footer"

defaultFont = 'Roboto','Helvetica','Arial',sans-serif
monospaceFont = "Lucida Console", Monaco, monospace

// COLORS
materialYellow = #ffd600
materialBlue = #2196F3

html, body
  background-color: #FAFAFA;
  margin 0

body
  font-family defaultFont

h1,h2
  font-family defaultFont

ul
  list-style none
  padding 0

a
  color materialBlue
  text-decoration none
  &:hover
    text-decoration underline

section
h1
  max-width 900px
  margin auto

.cover
  max-width none

  display block
  padding 8em 2em
  +below('m')
    padding 4em 2em

  background  materialYellow url('img/jazzists.jpg') center center no-repeat
  background-size cover

  box-shadow inset 0 -7px 16px -12px grayDark
  margin-bottom 2em

  .inside
    display flex
    align-items center
    justify-content space-between

    max-width 900px
    margin auto

    +below('m')
      flex-direction column

  h1
    font-size 3em
    font-weight 300
    color darken(materialYellow, 30)

  .logo
    width 15em
    height 15em
    +below('m')
      max-width 8em
      max-height 8em
      width 70vw
      height 70vw
      margin-top 2em
    img
      max-width: 100%
      max-height: 100%

.model-pics
  img
    max-width: 100%


.summary
  ul
    li
      font-size .9em
      display inline-block
      line-height 1.5em
      &:after
        content '|'
        margin 0 .3em
      &:last-of-type:after
        content none
      a
        text-decoration none
        color #555
        &:hover
          text-decoration underline
          color #333

.card
  background #fff
  box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)

  ul.list
    padding 1em 0
    > li
      margin 1em 2em
      padding 1em
      border-bottom 1px solid #999

  h2
    font-weight: 300
    margin 0
    a
      text-decoration none
      color inherit;
    span
      font-variant: small-caps
    small
      display block
      font-size: .5em
      opacity: .6
      font-family monospaceFont

  ul.features
    display table
    li
      display table-row
      margin .5em
      font-size .9em
      div
        display table-cell
        padding .5em
        vertical-align: text-top;
      .prop
        font-variant: small-caps
        opacity .8

      small
        opacity .5
        font-size .8em
